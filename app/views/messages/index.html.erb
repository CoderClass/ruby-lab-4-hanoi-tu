<%= render "messages", { messages: @room.messages } %>

<hr>

<%= form_for [@room, Message.new], html: { class: "form-inline"} do |f| %>
  <div class="form-group">
    <%= f.text_field :content, class: "form-control", placeholder: "Message content" %>

    <% if !current_user %>
      <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
    <% end %>

    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

<script type="text/javascript">
  $(function() {
    setInterval(function() {
      window.updateMessagesViaJSON("<%= request.original_url %>")
    }, 3000)

    // setInterval(function() {
