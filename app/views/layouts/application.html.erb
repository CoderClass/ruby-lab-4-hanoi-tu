<!DOCTYPE html>
<html>
  <head>
    <title>Lecture 4 - Chat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-faded">
      <div class="container">
        <%= link_to 'CHATAPP', root_path, class: "navbar-brand" %>
        <ul class="nav navbar-nav">
          <li class="nav-item active">
            <%= link_to 'Home', root_path, class: "nav-link" %>
          </li>
        </ul>

        <% if current_user %>
          <ul class="nav navbar-nav float-xs-right">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="javascript:void(0)" data-toggle="dropdown">
                <%= current_user %>
              </a>
              <div class="dropdown-menu">
                <%= link_to 'Logout', logout_path, class: 'dropdown-item', method: 'delete' %>
               </div>
             </li>
          </ul>
        <% else %>
          <%= form_tag login_path, method: 'post', class: 'form-inline float-xs-right' do %>
            <%= text_field_tag "username", '', placeholder: "Username to indentify", class: "form-control", required: true %>
            <%= submit_tag "Login", class: "btn btn-outline-success" %>
          <% end %>
        <% end %>

      </div>
    </nav>
    <div class="container">
      <div style="margin-bottom:15px;">
        <%= flash_messages %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
